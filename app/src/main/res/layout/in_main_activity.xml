<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".In_Frame_Activity"
    tools:showIn="@layout/in_toolbar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnshape_1"
                android:drawableLeft="@mipmap/one_w"
                android:drawablePadding="60dp"
                android:foreground="?selectableItemBackground"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="5분 명상"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnshape_2"
                android:drawableLeft="@mipmap/two_w"
                android:drawablePadding="60dp"
                android:foreground="?selectableItemBackground"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="발성 명상"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnshape_3"
                android:drawableLeft="@mipmap/three_w"
                android:drawablePadding="60dp"
                android:foreground="?selectableItemBackground"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="시지각 명상"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnshape_5"
                android:drawableLeft="@mipmap/five_w"
                android:drawablePadding="60dp"
                android:foreground="?selectableItemBackground"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="그리기 명상"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnshape_4"
                android:drawableLeft="@mipmap/four_w"
                android:drawablePadding="60dp"
                android:foreground="?selectableItemBackground"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="소리 명상"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnshape_6"
                android:drawableLeft="@mipmap/six"
                android:drawablePadding="60dp"
                android:foreground="?selectableItemBackground"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="최근 명상"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/btnshape_7"
                android:drawableLeft="@mipmap/seven"
                android:drawablePadding="60dp"
                android:foreground="?selectableItemBackground"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="관심 명상"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>